[bar/laptop]
monitor = ${env:MONITOR:eDP-1-1}
enable-ipc = true

width = 100%
height = 24
;offset-x = 1%
;offset-y = 1%
;radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = {$xrdb:red}

border-size = 0
border-color = ${colors.white}

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 0

font-0 = mono:pixelsize=9;1
font-1 = Noto Color Emoji:scale=10:style=Regular;2

modules-left = bspwm xwindow
modules-center = 
modules-right = network-traffic eth wlan sp memory sp cpu system-cpu-frequency system-cpu-tempercore sp pulseaudio sp battery sp xkeyboard sp date time

locale = ru_RU.UTF-8

tray-position = right
tray-padding = 0

wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

